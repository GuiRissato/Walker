<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Perfil.HomeFragment">
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="379dp"
        android:layout_height="208dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        app:srcCompat="@drawable/button_confirm" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descricao_usuario"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="180dp"/>
    <TextView
        android:id="@+id/cidade_usuario"
        android:layout_width="133dp"
        android:layout_height="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="180dp"
         />

    <TextView
        android:id="@+id/passeios_usuario"
        android:layout_width="133dp"
        android:layout_height="20dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="180dp"
        />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="123dp"
        android:layout_height="121dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/user"
        />
</FrameLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="379dp"
        android:layout_height="106dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        app:srcCompat="@drawable/button_confirm" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="83dp"
        android:layout_height="105dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/pet1" />


    <TextView
        android:id="@+id/pet_usuario"
        android:layout_width="264dp"
        android:layout_height="51dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="155dp"
                />


</FrameLayout>
</LinearLayout>